model Typ
	external Type T1; // To be discussed: does it have sense to have "external Type"?

	// Constructors
	Type _T extends Real X {// (represents any element of Real)
		alias T_shortcut;
		parameter Real P1;
		parameter Integer N;
		Real X1 is X*P1;
		Real X2 is X + N;
		forbid +; // what is this?
	};

	//in a model
 //	T Y; <--- in the type T you replace x by y - parametrized types

	Type _T3 extends _T2(P1=0.001, N=273) {
		forbid /; // operator not allowed for this type
	};

	_T2 Var_t2(P1=0.1,N=10);

	// Examples
	Type _RichEvent
		extends Event Event1{
			parameter String Name;
			fixed Real TimeOfOccurence;
			};

	_RichEvent E(Name="toto");

end Typ;
